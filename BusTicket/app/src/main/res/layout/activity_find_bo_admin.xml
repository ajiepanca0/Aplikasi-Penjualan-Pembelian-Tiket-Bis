<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.FindBoAdminActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Booking Order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/findIDBO"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:background="@drawable/background_"
        android:hint="Find Your ID Booking"
        android:gravity="center"
        android:inputType="text"
        />

    <Button
        android:id="@+id/btnfind"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/findIDBO"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Register"
        android:textColor="@color/white"
        />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Admin.DetailBookingOrderActivity"
        android:background="@drawable/background_"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@+id/findIDBO"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_gravity="center"
            android:background="@drawable/background_"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_horizontal"
                android:text="BOOKING TICKET"
                android:textColor="@color/black"
                android:id="@+id/tvjudul"
                android:textStyle="bold"
                android:textSize="20dp"
                />


            <TextView
                android:id="@+id/tvidbooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvjudul"
                android:text="Id Booking :"
                android:textColor="#04D9F4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_isi_idbooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvjudul"
                android:text="id...."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />



            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_idbooking"
                android:text="Name Order :"
                android:textColor="#04D9F4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tv_isi_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_idbooking"
                android:text="Name...."
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tvphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_name"
                android:text="Phone :"
                android:textColor="#04D9F4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tv_isi_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvphone"
                android:text="phone number...."
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tvdestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_phone"
                android:text="Destination :"
                android:textColor="#04D9F4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tv_isi_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_phone"
                android:text="destination...."
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tvdestination"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tvdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_destination"
                android:text="Date :"
                android:textColor="#04D9F4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tv_isi_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvdate"
                android:text="Date...."
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_date"
                android:text="Time :"
                android:textColor="#04D9F4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tv_isi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_date"
                android:text="time...."
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tvtime"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tvbus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_time"
                android:text="Bus :"
                android:textColor="#04D9F4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tv_isi_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_time"
                android:text="Bus...."
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tvbus"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />


            <TextView
                android:id="@+id/tvprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_bus"
                android:text="Price :"
                android:textColor="#04D9F4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tv_isi_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_isi_bus"
                android:text="Price...."
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tvprice"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />








        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>